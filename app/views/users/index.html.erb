<h1>Users</h1>

<table class="table">
  <tr>
    <td>Username</td>
    <td>Gopay Credit</td>
    <td>Transaction</td>
    <td>Action</td>
  </tr>

    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.gopay %></td>
      <td><%= link_to 'Topup', user_topup_path(user), :class => "btn btn-success btn-xs" %></td>
      <td><%= link_to 'Show', user, :class => "btn btn-default btn-xs" %>
          <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning btn-xs" %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

