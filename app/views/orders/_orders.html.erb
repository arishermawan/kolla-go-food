<table class="table">
  <tr>
    <td>Id</td>
    <td>Name</td>
    <td>Address</td>
    <td>Email</td>
    <td>Payment</td>
    <td>Voucers Code</td>
    <td>Total Price</td>
    <td>Action</td>
  </tr>

  <% @orders.each do|o| %>
  <tr class="<%= cycle('list_line_odd','list_line_even')%>">
    <td><%= o.id %></td>
    <td><%= o.name %></td>
    <td><%= o.address %></td>
    <td><%= o.email %></td>
    <td><%= o.payment_type %></td>

    <td><% if o.voucher != nil  %><%= o.voucher.code %> <% end %> </td>
    <td><%= number_to_currency(o.total, unit: "Rp ", delimiter: ".", separator: ",")  %></td>
    <td>  <%= link_to 'Show', o %>
          <%= link_to 'Edit', edit_order_path(o) %>
          <%= link_to 'Destroy', o, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>
