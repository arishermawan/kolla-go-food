<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @food.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @food.price %>
</p>

<p>
  <strong>Category:</strong>
  <% if(@food.category_id != nil) %>
    <%= @food.category.name %>
  <% end %>
</p>

<% if @reviews != nil %>
  <table>
    <tr>
      <td>Name</td>
      <td>Review</td>

    </tr>
  <% @reviews.each do |r| %>
    <tr>
      <td><%= r.name %></td>
      <td> <strong><%= r.title %></strong><br>
          <%= r.description %>
      </td>
    </tr>

  <% end %>
  </table>
<% else %>

  No Reviews

<% end %>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back', foods_path %>
